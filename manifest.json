{
    "name": "COVID-19 tracker",
    "version": "1.0",
    "description": "Check the number of COVID-19 cases in your country right now!",
    "permissions": ["geolocation","storage","activeTab"],
    "background": {
        "scripts": ["api.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/covid.png",
        "32": "images/covid.png",
        "48": "images/covid.png",
        "128": "images/covid.png"
    },
    "manifest_version": 2
}